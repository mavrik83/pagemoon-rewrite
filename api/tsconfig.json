{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["./types"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["./*.js", "./**/*.ts", "src/**/*.ts", "test/**/*.ts"]
}
